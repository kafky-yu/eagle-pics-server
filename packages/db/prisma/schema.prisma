generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["darwin", "darwin-arm64", "windows", "native"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite?connection_limit=1"
}

model Config {
  // config
  name             String  @id @unique @default("config")
  // zh-cn、en-us、zh-tw
  language         String  @default("zh-cn")
  // 配色
  color            String  @default("light")
  // 主题
  theme            String  @default("gallery")
  // 服务器 API 端口
  serverPort       Int     @default(61122)
  // Library 资源 / 主题端口
  clientPort       Int     @default(61121)
  // 客户端网址
  clientSite       String?
  // 当前 IP
  ip               String  @default("localhost")
  // 显示回收站
  trash            Boolean @default(false)
  // 显示加密文件夹
  pwdFolder        Boolean @default(false)
  // 启动时对比资源库
  startDiffLibrary Boolean @default(false)
  // 自动同步
  autoSync         Boolean @default(false)
  // 当前活动的库路径
  activeLibraryPath String?
}

model Library {
  // 路径
  path         String    @id @unique
  // eagle | billfish | pixcall
  type         String
  // created time
  createdTime  DateTime  @default(now())
  // updated time
  updatedTime  DateTime  @updatedAt
  // 最后同步时间
  lastSyncTime DateTime?
  // 是否为当前活动的库
  isActive     Boolean   @default(false)
}

// 等待同步的文件
model Pending {
  path String @id @unique
  // create | update | delete
  type String
}

model Image {
  id               Int      @id @unique @default(autoincrement())
  // 完整地址
  path             String   @unique
  // 名字
  name             String
  // 文件大小
  size             Int
  // 创建时间
  createdTime      DateTime @default(now())
  // 修改时间
  updateTime       DateTime @updatedAt
  // 文件的 mtime
  mtime            DateTime
  // 添加时间
  modificationTime DateTime @default(now())
  // 扩展名
  ext              String
  // 宽度
  width            Int
  // 高度
  height           Int
  // 是否删除
  isDeleted        Boolean  @default(false)
  // 视频时长
  duration         Float?
  // 描述
  annotation       String?
  // 链接
  url              String?
  // 颜色
  colors           Color[]
  // 文件夹
  folders          Folder[]
  // 标签
  tags             Tag[]
  // blurDataURL Base64
  blurDataURL      String?
  // 没有缩略图
  noThumbnail      Boolean  @default(false)
}

model Tag {
  name   String  @id @unique
  images Image[]
}

model Color {
  // 16 进制数字
  rgb    Int     @id @unique
  images Image[]
}

model Folder {
  id           String  @id @unique @default(uuid())
  name         String
  pid          String?
  description  String?
  images       Image[]
  password     String?
  passwordTips String?
  show         Boolean @default(true)
}

model Log {
  path        String   @id @unique
  // json-error | unsupported-ext | deleted | unknown
  // unknown 如果确认了错误，可以从 unknown 改为其他类型
  type        String
  // 具体的错误信息
  message     String
  // 创建时间
  createdTime DateTime @default(now())
  updatedTime DateTime @updatedAt
}
